#include<bits/stdc++.h>
#define ll long long
using namespace std;

int main(){
ios_base::sync_with_stdio(false); 
cin.tie(NULL);  
ll n , k;
cin>>n>>k;
ll arr[n];
for(ll i=0;i<n;i++){
    cin>>arr[i];
}
ll count = 0;
for(ll i=0; i<n; i++){
    if(arr[i]>=arr[k-1] && arr[i]>0){
        count++;
    }
}
cout<<count<<endl;

return 0;
}  
  
